---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Home - RKT Regulador">
    <div id="protected-content" style="display: none;">
        <h3>Sistema de Gestión de Pedidos para Almacenes Reguladores de RIKUTEC</h3>
        <!-- Aquí puedes añadir más contenido para la página de bienvenida -->
    </div>
    
    <script>
        // Verificar autenticación sin React con delay para evitar bucles
        setTimeout(() => {
            const session = localStorage.getItem('rkt-session');
            if (session) {
                document.getElementById('protected-content').style.display = 'block';
            } else {
                window.location.replace('/');
            }
        }, 100);
    </script>
</Layout>
