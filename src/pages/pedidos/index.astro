---
import Layout from '../../layouts/Layout.astro';
import type { User } from '../../store/auth';

// Protegemos la ruta para que solo usuarios autenticados puedan acceder
const sessionCookie = Astro.cookies.get('session');
const user: User | null = sessionCookie ? JSON.parse(sessionCookie.value) : null;

if (!user) {
    return Astro.redirect('/');
}
---

<Layout title="Ver Pedidos - RKT Regulador">
	<div class="container">
		<h1>Listado de Pedidos</h1>
		<p>Aquí se mostrará la lista de pedidos existentes.</p>
        <!-- En el futuro, aquí irá una tabla con los datos de los pedidos -->
	</div>
</Layout>