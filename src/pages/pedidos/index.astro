---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Ver Pedidos - RKT Regulador">
	<div id="protected-content" style="display: none;">
		<div class="container">
			<h1>Listado de Pedidos</h1>
			<p>Aquí se mostrará la lista de pedidos existentes.</p>
			<!-- En el futuro, aquí irá una tabla con los datos de los pedidos -->
		</div>
	</div>
	
	<script>
		// Verificar autenticación sin React
		const session = localStorage.getItem('rkt-session');
		if (session) {
			document.getElementById('protected-content').style.display = 'block';
		} else {
			window.location.replace('/');
		}
	</script>
</Layout>