---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header';
import type { User } from '../../store/auth';

// El middleware ya se encarga de proteger la ruta y de pasar el usuario.
const user = Astro.locals.user as User | null;
---

<Layout title="Subir Pedido - RKT Regulador">
	<Header client:load user={user} />
	<main class="container">
		<h1>Subir Nuevo Pedido</h1>
		<p>Utilice el formulario a continuación para subir un nuevo fichero de pedido (PDF).</p>
        <!-- En el futuro, aquí irá el formulario de subida de ficheros -->
	</main>
</Layout>
