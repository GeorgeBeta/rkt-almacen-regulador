---
import type { APIContext } from 'astro';

// Este endpoint se ejecuta en el servidor para cerrar la sesión del usuario.
export function GET({ cookies, redirect }: APIContext) {
  // Elimina la cookie de sesión
  cookies.delete('session', {
    path: '/',
  });
  // Redirige a la página de login
  return redirect('/');
}
